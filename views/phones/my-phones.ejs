<div class="section">
<div class="container">

  <div class="row">

    <div class="col-3">
    </div>

    <div id="auth-title" class="col-6">
      <h1><%= user.firstName %>'s Phones For Sale</h1>
      <h3>Total: <%= phones.length %></h3>
      <form id="form" action="/phones/my-phones/search" method="get">
        <input type="text" name="searchTerm"
          placeholder="Search your listings by Brand, Model, Condition, etc.">
        <br><br>

        <div class="row">
          <div class="col-6 search-button">
            <button>Search</button>
          </div>
          <div class="col-6 view-all-button">
            <button>View all</button>
          </div>

        </div>

      </form>
      <form id="form" action="/phones/new" method="get">
        <div class="row">
          <div class="col-12">
            <button class="add-new-button">Add a New Phone</button>
          </div>

        </div>
      </div>
    </form>

    <div class="col-3">
    </div>

  </div>

  <hr />

  <% for(let columnCount, index = 0; index < phones.length;columnCount +=1, index+=1 ){ %>
    <div class="row">
    <% if(columnCount % 4 === 0){ %>
      <div class="row">
    <% } %>
    <div class="col-3">
      <div class = "row">
        <div class = "col-6">
          <form id="form" action="/phones/<%= phones[index]._id %>/edit" method="get">
            <button>Edit</button>
          </form>
        </div>
        <div class = "col-6">
          <form id="form" action="/phones/<%= phones[index]._id %>/delete" method="post">
            <button>Delete</button>
          </form>
        </div>
      </div>

      <div id="listing-container">

        <ul>
          <img src="<%= phones[index].imageUrl %>" />
          <br></br>
          <li>
            Brand: <span class="listing-attribute"><strong><%= phones[index].brand %></strong></span>
          </li>
          <br></br>
          <li>
            Model: <span class="listing-attribute"><strong><%= phones[index].model %></strong></span>
          </li>
          <br></br>
          <li>
            Condition: <span class="listing-attribute"><strong><%= phones[index].condition %></strong></span>
          </li>
          <br></br>
          <li>
            Color: <span class="listing-attribute"><strong><%= phones[index].color %></strong></span>
          </li>
          <br></br>
          <li>
            Memory: <span class="listing-attribute"><strong><%= phones[index].memory %> GB</strong></span>
          </li>
          <br></br>
          <li>
            Price: <span class="listing-attribute"><strong>$ <%= phones[index].price %></strong></span>
          </li>
          <br></br>
          <li>
            Provider: <span class="listing-attribute"><strong><%= phones[index].provider %></strong></span>
          </li>
          <br></br>
          <li>
            Unlocked: <span class="listing-attribute"><strong><%= phones[index].unlocked %></strong></span>
          </li>
          <br></br>
          <li>
            Details: <span class="listing-attribute"><strong><%= phones[index].additionalDetails %></strong></span>
          </li>
          <br></br>
        </ul>
    </div>
    </div>

    <% if(columnCount % 4 === 0){ %>
    </div>
  <% } %>
<% } %>

</div>

</div>
</div>
